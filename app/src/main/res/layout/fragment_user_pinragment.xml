<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="90dp"
        android:background="@color/white"
        android:backgroundTint="@android:color/transparent"
        android:hint="Pin Code"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/cardView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRfid"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberPassword"
            android:lines="1"
            android:maxLength="4"
            android:scrollbars="horizontal"
            android:textAlignment="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButton1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="1"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButton2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"
                    android:backgroundTint="@color/white"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButton3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:fontFamily="@font/bold"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButton4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"
                    android:backgroundTint="@color/white"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButto5"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"
                    android:backgroundTint="@color/white"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButton6"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"
                    android:backgroundTint="@color/white"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButton7"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bold"
                    android:backgroundTint="@color/white"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButto8"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="8"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButton9"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    android:fontFamily="@font/bold"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButtonX"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    app:icon="@drawable/baseline_backspace_24"
                    app:iconSize="24dp"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/black"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButton0"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="0"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keypadButtonOK"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/baseline_check_24"
                    app:iconGravity="textEnd"
                    app:iconSize="36dp"
                    app:iconTint="@color/black"
                    app:layout_constraintWidth_default="wrap"
                    tools:targetApi="lollipop" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sampleHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sample"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:id="@+id/btnBack"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#000000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Pin Code"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Enter Your Code"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A successful attempt shall open the door for five seconds."
        android:textColor="#6A6868"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

</androidx.constraintlayout.widget.ConstraintLayout>